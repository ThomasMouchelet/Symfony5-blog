{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div class="ui middle aligned stackable grid container">
            <div class="row">
                <h2>Connexion</h2>
            </div>
            <div class="row">
                <div class="column">
                    <form action="{{ path('security_login') }}" class="ui form" method="post">
                        <div class="field">
                            <input type="email" name="_username" id="" class="field" placeholder="Votre email">
                        </div>
                        <div class="field">
                            <input type="password" name="_password" id="" class="field" placeholder="Votre mot de passe">
                        </div>

                        <button class="ui button" type="submit">
                            Connexion
                        </button>
                        <a href="{{ path('security_registration') }}">Pas encore de compte ?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
